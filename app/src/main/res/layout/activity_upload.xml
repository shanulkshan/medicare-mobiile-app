<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        tools:ignore="ExtraText">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/medblue_border"
            android:padding="20dp">
            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add your medicine details"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="16dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/uploadImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/addimage"/>

            <EditText
                android:id="@+id/UploadTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/uploadImage"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/medblue_border"
                android:padding="16dp"
                android:hint="Enter your medicine name"
                android:gravity="start|center_vertical"
                android:textColor="@color/medBlue" />


            <EditText
                android:id="@+id/UploadDosage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/uploadImage"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/medblue_border"
                android:padding="16dp"
                android:hint="Dosage"
                android:gravity="start|center_vertical"
                android:textColor="@color/medBlue" />

            <EditText
                android:id="@+id/UploadDesc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/uploadImage"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/medblue_border"
                android:padding="16dp"
                android:hint="Extra messages"
                android:gravity="start|center_vertical"
                android:textColor="@color/medBlue" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:text="Add to my medicine"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius ="20dp"/>





        </LinearLayout>>

    </androidx.cardview.widget.CardView>
</ScrollView>
